{
    "version": 2,
    "configurePresets": [
      {
        "name": "Default",
        "description": "Default configure settings",
        "generator": "Ninja", 
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
        }
      },
      {
        "name": "Mil",
        "inherits": "Default",
        "cacheVariables": {
          "Mil": "ON"
        }
      },
      {
        "name": "Joystick",
        "inherits": "Default",
        "cacheVariables": {
          "Joystick": "ON"
        }
      }
    ],
    "buildPresets": [
      {
        "name": "default",
        "description": "Default build settings",
        "configurePreset": "Default",
        "jobs": 4
      },
      {
        "name": "mil",
        "description": "Build Mil",
        "configurePreset": "Mil"
      },
      {
        "name": "joystick",
        "description": "Build Joystick",
        "configurePreset": "Joystick"
      }
    ],
    "testPresets": [
      {
        "name": "default",
        "configurePreset": "Default"
      }
    ]
  }
  